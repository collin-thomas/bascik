{
  "name": "@bascik/bascik",
  "version": "1.0.0",
  "description": "A Web Framework",
  "main": "transpile.js",
  "type": "module",
  "scripts": {
    "dev": "yarn create-key && node ${INSPECT} --watch-path=./transpile.js --watch-path=./lib --watch-path=./bascik.config.js ./transpile.js",
    "debug": "INSPECT=--inspect yarn dev",
    "build": "BASCIK_BUILD=1 node ./transpile.js",
    "create-key-clobber": "./create-key",
    "create-key": "(node -e \"if (!require('fs').existsSync('./localhost-cert.pem') || !require('fs').existsSync('./localhost-privkey.pem')) { console.log('key pair exists'); process.exit(1); } \") || yarn create-key-clobber",
    "test": "vitest",
    "test:ci": "vitest run --coverage.enabled --coverage.reporter='text-summary'",
    "test:coverage": "vitest run --coverage.enabled"
  },
  "bin": {
    "bascik": "./src/transpile.js",
    "bascik-create-key": "./src/create-key.js"
  },
  "author": "collin-thomas",
  "dependencies": {
    "chokidar": "^4.0.3"
  },
  "engines": {
    "node": ">=22.17.0"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.29.8",
    "vitest": "^0.29.8"
  }
}
